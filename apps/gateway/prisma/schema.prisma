generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Application {
  id            String   @id @default(uuid())
  userId        String
  amount        Int
  status        String
  score         Int?
  decision      Json?
  monoAccountId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@map("applications")
}

model Transaction {
  id          String   @id @default(uuid())
  accountId   String
  amount      Int
  type        String
  description String
  date        DateTime
  category    String?
  createdAt   DateTime @default(now())
  
  @@map("transactions")
}